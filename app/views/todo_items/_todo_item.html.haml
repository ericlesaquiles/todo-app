.row.clearfix
  - if todo_item.completed?
    .complete
      = link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch do
        %i.fa.fa-check
    .todo_item
      %p
        %strike= todo_item.content
  - else
    .complete
      = link_to complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch do
        %i.fa.fa-circle-thin
    .todo_item
      %p= todo_item.content
  .trash
    = link_to todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: { confirm: "You sure?" } do
      %i.fa.fa-trash
